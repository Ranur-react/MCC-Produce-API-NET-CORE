                            </div>
                            <div class="mb-3">
                                <label for="GenderEdit" class="form-label"><i class="fas fa-user"></i> Gender</label>
                                <select class="form-select form-control" id="GenderEdit" aria-label="Default select example">
                                    <option value="0">Male</option>
                                    <option value="1">Female</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="PasswordEdit" class="form-label">Password</label>
                                <input type="password" class="form-control" id="PasswordEdit">
                                <div id="PasswordHelp" class="form-text text-info"></div>

                            </div>
                            <div class="mb-3">
                                <label for="DegreeEdit" class="form-label"><i class="fas fa-user-graduate"></i> Degree</label>
                                <select class="form-select form-control" id="DegreeEdit" aria-label="Default select example">
                                    <option value="S2">Magister</option>
                                    <option value="S1">Strata I</option>
                                    <option value="D3">Diploma (3) </option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="gpaEdit" class="form-label"><i class="fas fa-certificate"></i> GPA</label>
                                <input type="number" value="0" required class="form-control" id="gpaEdit" aria-describedby="gpaHelp" required>
                                <div id="GPAHelp" class="form-text text-info"></div>
                            </div>
                            <div class="mb-3">
                                <label for="UniversityEdit" class="form-label"><i class="fas fa-building"></i> University</label>
                                <select class="form-select form-control" id="UniversityEdit" aria-label="Default select example">
                                    <option value="1">Institut Teknologi Padang</option>
                                    <option value="2">Institut Teknologi Bandung</option>
                                    <option value="3">STMIK AMIK Jayanusa</option>
                                </select>
                            </div>

                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-success rounded-circle" onclick="submit('update')"> <i class="fas fa-save"></i></button>
                <button type="button" data-dismiss="modal" class="btn btn-outline-secondary rounded-circle "> <i class="fas fa-share"></i></button>
            </div>
        </div>
    </div>
</div>

