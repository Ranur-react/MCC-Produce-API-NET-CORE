
@{
    Layout = "_LayoutSBLogin";
}

<!-- Outer Row -->
<div class="row justify-content-center">

    <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                    <div class="col-lg-6">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">@ViewData["WelComeTitle"]</h1>
                            </div>
                            <form class="user" action="/Accounts/Auth" method="POST">
                                <div class="form-group">
                                    <input type="email" class="form-control form-control-user"
                                           id="Email" name="Email" aria-describedby="emailHelp"
                                           placeholder="Enter Email Address...">
                                    <div id="EmailHelp" class="form-text text-danger"></div>

                                </div>
                                <div class="form-group">
                                    <input type="password" name="Password" class="form-control form-control-user"
                                           id="Password" placeholder="Password">
                                    <div id="PasswordHelp" class="form-text text-danger"></div>
                                </div>
                                @*<button type="submit" class="btn btn-primary btn-user btn-block">Login</button>*@
                                <button type="button"  onclick="LoginAuth('@ViewData["returnUrl"]');"  class="btn btn-primary btn-user btn-block button-login">Login Json</button>
                                
                                <hr>
                                <a href="#" class="btn btn-google btn-user btn-block">
                                    <i class="fab fa-google fa-fw"></i>
                                </a>
                            </form>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="/Accounts/Register">Create an Account!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
<script>
    const LoginAuth = (returnUrl) => {
        var obj = new Object();
        obj.Email = $('#Email').val();
        obj.Password = $('#Password').val();
        console.log("Inputan  . . .")
        console.log(obj)
        $.ajax({
            url: "/Accounts/AuthLogin",
            type: "post",
            data: obj,
            beforeSend: (e) => {
                $('.button-login').html("Loading . . ");
                $('.button-login').attr("disabled",true)
            },

        }).done((e) => {
            $('.button-login').html("Login");
            $('.button-login').attr("disabled", false)

            console.log(e);
            console.log("Destinations");
            console.log(!returnUrl);
            result = e;
            if (result.status == 200) {
                poUPAlertSweet("success", !returnUrl ? "Login Success" : "Kembali Login", '', "center").then(function () {
                    window.location = !returnUrl ? "/Dashboard" : `${returnUrl}`;
                });
                $(`#EmailAdd`).val("");
                $(`#PasswordAdd`).val("");

                $(`#EmailHelp`).text("");
                $(`#PasswordHelp`).text("");

            } else {
                if (result.status == 400) {
                    $(`#EmailHelp`).text("");
                    $(`#PasswordHelp`).text("");
                    if (result.result == 2) {
                        $("#EmailHelp").text(result.message);
                    } else if (result.result == 3) {
                        $("#PasswordHelp").text(result.message);
                    }
                } else {
                    poUPAlertSweet("error", "Gagal", JSON.stringify(result.errors), "center")
                }
            }
        }).fail((f) => {
            poUPAlertSweet("error", "Gagal", JSON.stringify(f), "center")
        });
    }
    const poUPAlertSweet = (state, title, texts, positions) => {
        return Swal.fire({
            position: positions,
            icon: state,
            title: title,
            text: texts,
            showConfirmButton: false,
            timer: 2000
        });
    }
</script>