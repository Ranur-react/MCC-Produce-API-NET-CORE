@{
    Layout = "_LayoutLatihan";
}
@section Header{
    <div class="row mb-3">
        <div class="col-sm-4">
            <button type="button" data-toggle="modal" data-target="#AddModal" class="btn btn-outline-primary "> <i class="fas fa-plus"></i> Tambah Data</button>
        </div>
        <div class="col-sm-8"></div>
    </div>
}

<table class="table table-hover " id="EmployeeTable">
    <thead>
        <tr>
            <th scope="col">No.</th>
            <th scope="col">Name</th>
            <th scope="col">NIK</th>
            <th scope="col">Phone</th>
            <th scope="col">Gender</th>
            <th scope="col">E-mail</th>
            <th scope="col">Birth Date</th>
            <th scope="col">Sallary</th>
            <th scope="col">Gpa</th>
            <th scope="col">Degre</th>
            <th scope="col">University Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">..</th>
            <td>...</td>
            <td>....</td>
            <td>...</td>
        </tr>
    </tbody>
</table>

<!-- Modal Tambah-->
<div class="modal fade" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Tambah Data</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="FirstNameAdd" class="form-label"><i class="fas fa-user"></i> First Name</label>
                        <input type="text" required class="form-control" id="FirstNameAdd"  aria-describedby="firstNameHelp" required>
                        <div id="FirstNameHelp" class="form-text text-info"></div>
                    </div>
                    <div class="mb-3">
                        <label for="LastNameAdd" class="form-label"><i class="fas fa-user"></i> Last Name</label>
                        <input type="text" required class="form-control" id="LastNameAdd" aria-describedby="lastNameHelp" required>
                        <div id="LastNameHelp" class="form-text text-info"></div>
                    </div>
                    <div class="mb-3">
                        <label for="PhoneAdd" class="form-label"><i class="fas fa-phone"></i> Phone</label>
                        <input type="tel" required class="form-control" id="PhoneAdd" aria-describedby="phoneHelp">
                        <div id="PhoneHelp" class="form-text text-info"></div>
                    </div>
                    <div class="mb-3">
                        <label for="BirthDateAdd"  class="form-label"><i class="fas fa-calendar"></i> BirthDate</label>
                        <input type="date" required value="1998/02/28" class="form-control" id="BirthDateAdd" aria-describedby="birthDateHelp" required>
                        <div id="BirthDateHelp" class="form-text text-info"></div>
                    </div>
                    <div class="mb-3">
                        <label for="SalaryAdd" class="form-label"><i class="fas fa-money-bill"></i> Sallary</label>
                        <input value="0" type="number" required class="form-control" id="SalaryAdd" aria-describedby="salaryHelp" required>
                        <div id="SalaryHelp" class="form-text text-info"></div>
                    </div>
                    <div class="mb-3">
                        <label for="EmailAdd" class="form-label"><i class="fas fa-mail-bulk"></i> Email address</label>
                        <input type="email" class="form-control" id="EmailAdd" aria-describedby="emailHelp">
                        <div id="EmailHelp" class="form-text text-info">Notif here . .</div>
                    </div>
                    <div class="mb-3">
                        <label for="GenderAdd" class="form-label"><i class="fas fa-user"></i> Gender</label>
                        <select class="form-select form-control" id="GenderAdd" aria-label="Default select example">
                            <option value="0">Male</option>
                            <option value="1">Female</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="PasswordAdd" class="form-label">Password</label>
                        <input type="password" class="form-control" id="PasswordAdd" required>
                        <div id="PasswordHelp" class="form-text text-info"></div>

                    </div>
                    <div class="mb-3">
                        <label for="DegreeAdd" class="form-label"><i class="fas fa-user-graduate"></i> Degree</label>
                        <select class="form-select form-control" id="DegreeAdd" aria-label="Default select example">
                            <option value="S2">Magister</option>
                            <option value="S1">Strata I</option>
                            <option value="D3">Diploma (3) </option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="gpaAdd" class="form-label"><i class="fas fa-certificate"></i> GPA</label>
                        <input type="number" value="0" required class="form-control" id="gpaAdd" aria-describedby="gpaHelp" required>
                        <div id="GPAHelp" class="form-text text-info"></div>
                    </div>
                    <div class="mb-3">
                        <label for="UniversityAdd" class="form-label"><i class="fas fa-building"></i> University</label>
                        <select class="form-select form-control" id="UniversityAdd" aria-label="Default select example">
                            <option value="1">Institut Teknologi Padang</option>
                            <option value="2">Institut Teknologi Bandung</option>
                            <option value="3">STMIK AMIK Jayanusa</option>
                        </select>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="truthCheck" required>
                        <label class="form-check-label" for="truthCheck">Centang jika Yakin data sudah benar</label>
                        <div id="truthHelp" class="form-text text-danger"></div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-success rounded-circle" onclick="submit()"> <i class="fas fa-save"></i></button>
                <button type="button" data-dismiss="modal" class="btn btn-outline-secondary rounded-circle "> <i class="fas fa-share"></i></button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Update-->
<div class="modal fade" id="UpdateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body spiretes-content">

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-success rounded-circle "> <i class="fas fa-save"></i></button>
                <button type="button" data-dismiss="modal" data-toggle="modal" data-target="#AddModal" class="btn btn-outline-secondary rounded-circle "> <i class="fas fa-share"></i></button>
            </div>
        </div>
    </div>
</div>
